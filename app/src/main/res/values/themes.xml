<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stelaandroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#3C99AB</item>
        <item name="colorPrimaryVariant">#3C99AB</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">
        <!-- Non selected star color -->
        <item name="colorControlNormal">#4D000000</item>

        <!-- Selected star color -->
        <item name="colorControlActivated">#FDD736</item>
    </style>

    <style name="smallRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
        <!-- Non selected star color -->
        <item name="colorControlNormal">#4D000000</item>

        <!-- Selected star color -->
        <item name="colorControlActivated">#FDD736</item>
    </style>
</resources>