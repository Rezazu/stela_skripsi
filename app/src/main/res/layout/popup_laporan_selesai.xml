<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="550dp"
    android:padding="10dp"
    android:paddingHorizontal="15dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/popup_layout"
    >

    <LinearLayout
        android:id="@+id/ll_permasalahan_awal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10sp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Permasalahan awal"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:layout_marginTop="10sp"
            android:background="@drawable/edit_text_unfill_border_gray"
            android:id="@+id/tv_permaslahan_awal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/montserrat_regular"
            android:text="test"
            android:padding="15sp"
            android:textColor="#000000"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_permasalahan_akhir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10sp"
        android:layout_below="@+id/ll_permasalahan_awal"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Permasalahan akhir"
            android:textColor="#000000"
            android:textSize="13sp" />

        <EditText
            android:layout_marginTop="10sp"
            android:background="@drawable/edit_text_border_gray"
            android:id="@+id/ed_permasalahan_akhir"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:ems="10"
            android:lines="5"
            android:gravity="top"
            android:fontFamily="@font/montserrat_regular"
            android:padding="15sp"
            android:textColor="#000000"
            android:textSize="10sp" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_solusi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10sp"
        android:layout_below="@+id/ll_permasalahan_akhir"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_solusi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Solusi"
            android:textColor="#000000"
            android:textSize="13sp" />

        <EditText
            android:layout_marginTop="10sp"
            android:background="@drawable/edit_text_border_gray"
            android:id="@+id/ed_solusi"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:ems="10"
            android:lines="5"
            android:gravity="top"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/montserrat_regular"
            android:padding="15sp"
            android:textColor="#000000"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_upload"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_solusi"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Laporan"
            android:textColor="#000000"
            android:textSize="13sp"/>

        <ImageButton
            android:id="@+id/btn_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:src="@drawable/btn_upload_petugas" />

        <TextView
            android:id="@+id/tv_filelaporan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/ll_upload"
    android:layout_marginTop="10dp"
    android:gravity="center_horizontal"
    >
    <Button

        android:id="@+id/btn_kembali"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:text="Kembali"
        app:strokeColor="#5F9DF7"
        android:textColor="#2954A8"
        android:backgroundTint="@color/white"
        android:textAllCaps="false"
        app:cornerRadius="5dp" />

    <Button
        android:id="@+id/btn_update_selesai"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="18dp"
        android:textColor="@color/white"
        android:layout_toEndOf="@+id/btn_kembali"
        android:backgroundTint="#43A241"
        android:text="Lapor"
        android:textAllCaps="false"
        app:cornerRadius="5dp" />


</LinearLayout>


</RelativeLayout>