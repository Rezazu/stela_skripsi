<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C99AB"
    android:layout_gravity="center_horizontal"
    tools:context=".Login.LandingPage">

    <TextView
        android:id="@+id/tv_dpr2022"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_setjen"
        android:layout_centerInParent="true"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Sekretariat Jenderal DPR RI 2022"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="180dp"
        android:layout_height="163dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/stelalogo" />

    <ImageView
        android:id="@+id/logo_setjen"
        android:layout_width="50dp"
        android:layout_centerInParent="true"
        android:layout_height="50dp"
        android:src="@drawable/logo_setjen"
        android:layout_marginTop="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        android:layout_below="@+id/imageView2"/>

</RelativeLayout>