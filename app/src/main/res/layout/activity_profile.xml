    <RelativeLayout
        android:id="@+id/main_section"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="#3C99AB"
        android:paddingBottom="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nama_profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_photo"
            android:layout_marginTop="15dp"
            android:layout_weight='1'
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Nama"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:includeFontPadding="false"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_departemen_profil"
            android:layout_width="wrap_content"
            android:layout_weight='1'
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nama_profil"
            android:layout_marginTop="12dp"
            android:includeFontPadding="false"
            android:fontFamily="@font/montserrat_regular"
            android:text="Unit kerja"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="75dp"
            android:layout_height="75dp"

            app:srcCompat="@drawable/circle_1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fill_section"
        android:layout_width="330dp"
        android:layout_height="310dp"
        android:layout_below="@+id/main_section"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-80dp"
        android:background="@drawable/shadow_profile">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_section"
            android:layout_marginStart="11dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/imageViewUsername"
            android:fontFamily="@font/montserrat_medium"
            android:text="Username"
            android:textSize="12sp"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_username"
            android:layout_marginStart="11dp"
            android:layout_marginTop="28dp"
            android:layout_toEndOf="@+id/imageViewEmail"
            android:fontFamily="@font/montserrat_medium"
            android:text="E-mail"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_departemen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_email"
            android:layout_marginStart="11dp"
            android:layout_marginTop="28dp"
            android:layout_toEndOf="@+id/imageViewWork"
            android:fontFamily="@font/montserrat_medium"
            android:text="Departemen"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_telepon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_departemen"
            android:layout_toEndOf="@id/imageViewPhone"
            android:layout_marginStart="11dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Telepon"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_telepon"
            android:layout_toEndOf="@id/imageViewTelephone"
            android:layout_marginStart="11dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Nomor HP"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_username2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_section"
            android:layout_alignParentStart="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_medium"
            android:text=": "
            android:textSize="12sp"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/tv_email2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_username2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/montserrat_medium"
            android:text=": "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_departemen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_email2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/montserrat_medium"
            android:text=": "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_bagian2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_departemen2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/montserrat_medium"
            android:text=": "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_telepon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_bagian2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/montserrat_medium"
            android:text=": "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_hp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_telepon2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/montserrat_medium"
            android:text=": "
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageViewUsername"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/mdi_user_circle" />

        <ImageView
            android:id="@+id/imageViewEmail"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/imageViewUsername"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/mdi_email" />

        <ImageView
            android:id="@+id/imageViewWork"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/imageViewEmail"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/material_symbols_work" />

        <ImageView
            android:id="@+id/imageViewPhone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/imageViewWork"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="62dp"
            android:src="@drawable/material_symbols_phone_iphone" />

        <ImageView
            android:id="@+id/imageViewTelephone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/imageViewPhone"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/ic_baseline_local_phone" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_keluar"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/fill_section"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="131dp"
        android:backgroundTint="#FF4F4F"
        android:text="Keluar"
        android:textSize="8sp"
        app:cornerRadius="10dp" />
</RelativeLayout>