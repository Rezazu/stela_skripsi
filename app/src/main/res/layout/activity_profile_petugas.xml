<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.Profile">

    <RelativeLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#073D5F"
        android:paddingHorizontal="20sp"
        android:paddingTop="15dp"
        tools:ignore="MissingConstraints"/>

    <RelativeLayout
        android:id="@+id/main_section"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#073D5F"
        android:layout_below="@id/header_section"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_profil_petugas"
            android:layout_width="80dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/circle_1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_profil_petugas"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="25dp">

            <TextView
                android:id="@+id/tv_namaprofilpetugas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="18sp"
                android:text="Nama"/>

            <TextView
                android:id="@+id/tv_unitkerja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit kerja"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"/>

            <RatingBar
                android:id="@+id/rating_profil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_below="@id/tv_unitkerja"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:max="5"
                android:isIndicator="true"
                android:progressTint="#FFB800"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_pengguna"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/border_gray2"
        android:layout_below="@+id/main_section"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/iv_profil_small"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/ic_profil"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_profil_small"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Data pengguna"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_rating"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/border_gray2"
        android:layout_below="@+id/rl_pengguna"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp">
        <ImageView
            android:id="@+id/iv_rating_small"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/ic_daftar_rating"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_rating_small"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Daftar penilaian"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_keluar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/border_gray2"
        android:layout_below="@+id/rl_rating"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp">
        <ImageView
            android:id="@+id/iv_keluar_small"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_logout"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_keluar_small"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Keluar"/>
    </RelativeLayout>
</RelativeLayout>