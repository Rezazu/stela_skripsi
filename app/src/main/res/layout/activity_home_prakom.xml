<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle_4_prakom" />
    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/circle_1" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="25dp"

        android:layout_toEndOf="@+id/iv_photo"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Farhan Agustiansyah"
        android:textColor="#FFFFFF"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_dept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/sv_home"
        android:layout_below="@+id/tv_name"
        android:layout_marginStart="19dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="14dp"
        android:layout_toEndOf="@+id/iv_photo"
        android:fontFamily="@font/montserrat_regular"
        android:text="Helpdesk"
        android:textColor="#FFFFFF"
        android:textSize="10sp"/>


    <ImageButton
        android:id="@+id/btn_notification"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:background="@null"
        app:srcCompat="@drawable/ic_notification_btn" />

    <ScrollView
        android:id="@+id/sv_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_header"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_header">

        <RelativeLayout
            android:id="@+id/layout_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="Halo"/>

            <TextView
                android:id="@+id/welcomenama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/welcomeText"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:textSize="14dp"
                android:text="Aan!"/>


            <TextView
                android:id="@+id/textView2"
                android:textColor="@color/black"
                android:layout_below="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="13dp"

                android:fontFamily="@font/montserrat_regular"
                android:text="Anda memiliki 4 permintaan baru yang belum di kerjakan"
                android:textSize="12dp" />

            <RelativeLayout
                android:id="@+id/layout_laporan"
                android:layout_below="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/laporan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:text="Laporan"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ticket_menu"
                android:layout_marginTop="20sp"
                android:layout_below="@+id/layout_laporan"
                >

                <TextView
                    android:id="@+id/btn_aktif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20sp"
                    android:background="@drawable/shadow_banner_prakom"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingHorizontal="30sp"
                    android:paddingVertical="10sp"
                    android:text="Tiket Aktif"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btn_selesai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20sp"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Tiket Selesai"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:background="@drawable/border_blue_prakom"
                    android:paddingVertical="10sp"
                    android:paddingHorizontal="27sp"
                    />

            </RelativeLayout>
            <FrameLayout
                android:id="@+id/flFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/ticket_menu"
>
            </FrameLayout>
<!--            <RelativeLayout-->
<!--                android:id="@+id/rv_prakom"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@+id/ticket_menu"-->
<!--                tools:ignore="NotSibling"-->
<!--                android:layout_marginTop="20dp">-->

<!--                <androidx.recyclerview.widget.RecyclerView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:paddingHorizontal="15sp"-->
<!--                    android:paddingBottom="10sp"/>-->

<!--            </RelativeLayout>-->

        </RelativeLayout>



    </ScrollView>

</RelativeLayout>