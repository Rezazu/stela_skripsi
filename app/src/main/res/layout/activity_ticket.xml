<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15sp"
    tools:context=".Ticket.Ticket">

    <!-- Header Tiket -->
    <RelativeLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="20sp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Tiket"
            android:textColor="#2954A8"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/back_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/back_btn2" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_section"
        android:background="@drawable/rectangle_20"
        android:layout_marginHorizontal="25sp"
        android:paddingBottom="20sp"
        android:layout_marginBottom="25sp">

        <!-- Heading Ticket -->
        <LinearLayout
            android:id="@+id/heading_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="15sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:id="@+id/tv_judul_tiket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Judul Tiket"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginTop="20sp" />

            <TextView
                android:id="@+id/tv_kode_tiket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kode Tiket"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/montserrat_regular"
                android:textAlignment="center"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Body Ticket -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/heading_ticket"
            android:layout_marginTop="20sp"
            android:paddingHorizontal="25sp">

            <!-- Tanggal Permintaan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_tanggal_tiket_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Tanggal Permintaan"
                    android:textColor="#000000"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="25sp">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text=":"
                        android:textColor="#000000"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_tanggal_tiket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="test"
                        android:layout_alignParentEnd="true"
                        android:textColor="#000000"
                        android:layout_marginLeft="15sp"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Border -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                app:layout_constraintEnd_toEndOf="@+id/imageView6"
                app:layout_constraintHorizontal_bias="0.442"
                app:layout_constraintStart_toStartOf="@+id/imageView6"
                app:layout_constraintTop_toBottomOf="@+id/header_section"
                app:layout_constraintVertical_bias="0.447"
                app:srcCompat="@drawable/garis" />

            <!-- Data Pelapor -->
            <LinearLayout
                android:layout_marginTop="20sp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Nama Pelapor -->
                <RelativeLayout
                    android:layout_marginBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_nama_pelapor_label"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Nama"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text=":"
                            android:textColor="#000000"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_nama_pelapor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="test"
                            android:layout_alignParentEnd="true"
                            android:textColor="#000000"
                            android:layout_marginLeft="15sp"
                            android:textSize="10sp" />

                    </LinearLayout>

                </RelativeLayout>

                <!-- Jabatan Pelapor -->
                <RelativeLayout
                    android:layout_marginBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_jabatan_pelapor_label"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Jabatan"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text=" :"
                            android:textColor="#000000"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_jabatan_pelapor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="test"
                            android:layout_alignParentEnd="true"
                            android:textColor="#000000"
                            android:layout_marginLeft="15sp"
                            android:textSize="10sp" />

                    </LinearLayout>

                </RelativeLayout>

                <!-- Unit Kerja Pelapor -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_unit_kerja_pelapor_label"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Unit Kerja"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text=":"
                            android:textColor="#000000"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_unit_kerja_pelapor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="test"
                            android:layout_alignParentEnd="true"
                            android:textColor="#000000"
                            android:layout_marginLeft="15sp"
                            android:textSize="10sp" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <!-- Border -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                app:layout_constraintEnd_toEndOf="@+id/imageView6"
                app:layout_constraintHorizontal_bias="0.442"
                app:layout_constraintStart_toStartOf="@+id/imageView6"
                app:layout_constraintTop_toBottomOf="@+id/header_section"
                app:layout_constraintVertical_bias="0.447"
                app:srcCompat="@drawable/garis" />

            <!-- Data Lokasi -->
            <LinearLayout
                android:layout_marginTop="20sp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Gedung Pelapor -->
                <RelativeLayout
                    android:layout_marginBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Gedung"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text=":"
                            android:textColor="#000000"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_gedung_pelapor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="test"
                            android:layout_alignParentEnd="true"
                            android:textColor="#000000"
                            android:layout_marginLeft="15sp"
                            android:textSize="10sp" />

                    </LinearLayout>

                </RelativeLayout>

                <!-- Lantai Pelapor -->
                <RelativeLayout
                    android:layout_marginBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Lantai"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text=" :"
                            android:textColor="#000000"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_lantai_pelapor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="test"
                            android:layout_alignParentEnd="true"
                            android:textColor="#000000"
                            android:layout_marginLeft="15sp"
                            android:textSize="10sp" />

                    </LinearLayout>

                </RelativeLayout>

                <!-- Ruangan Pelapor -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Unit Kerja"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text=":"
                            android:textColor="#000000"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_ruangan_pelapor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="test"
                            android:layout_alignParentEnd="true"
                            android:textColor="#000000"
                            android:layout_marginLeft="15sp"
                            android:textSize="10sp" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <!-- Border -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                app:layout_constraintEnd_toEndOf="@+id/imageView6"
                app:layout_constraintHorizontal_bias="0.442"
                app:layout_constraintStart_toStartOf="@+id/imageView6"
                app:layout_constraintTop_toBottomOf="@+id/header_section"
                app:layout_constraintVertical_bias="0.447"
                app:srcCompat="@drawable/garis" />

            <!-- Data Detail -->
            <LinearLayout
                android:layout_marginTop="20sp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Keterangan Pelapor -->
                <RelativeLayout
                    android:layout_marginBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Keterangan"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text=":"
                            android:textColor="#000000"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_keterangan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="test"
                            android:layout_alignParentEnd="true"
                            android:textColor="#000000"
                            android:layout_marginLeft="15sp"
                            android:textSize="10sp" />

                    </LinearLayout>

                </RelativeLayout>

                <!-- Permasalahan Akhir -->
                <RelativeLayout
                    android:layout_marginBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Permasalahan Akhir"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text=" :"
                            android:textColor="#000000"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_permasalahan_akhir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="test"
                            android:layout_alignParentEnd="true"
                            android:textColor="#000000"
                            android:layout_marginLeft="15sp"
                            android:textSize="10sp" />

                    </LinearLayout>

                </RelativeLayout>

                <!-- Solusi -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Solusi"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text=":"
                            android:textColor="#000000"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_solusi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="test"
                            android:layout_alignParentEnd="true"
                            android:textColor="#000000"
                            android:layout_marginLeft="15sp"
                            android:textSize="10sp" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <!-- Border -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                app:layout_constraintEnd_toEndOf="@+id/imageView6"
                app:layout_constraintHorizontal_bias="0.442"
                app:layout_constraintStart_toStartOf="@+id/imageView6"
                app:layout_constraintTop_toBottomOf="@+id/header_section"
                app:layout_constraintVertical_bias="0.447"
                app:srcCompat="@drawable/garis" />

            <!-- Data Dokumen Lampiran -->
            <LinearLayout
                android:layout_marginTop="20sp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Dokumen Lampiran -->
                <RelativeLayout
                    android:layout_marginBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Dokumen Lampiran"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvDokumen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="15sp"
                            android:paddingBottom="10sp" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="82dp"
            android:background="@null"
            android:onClick="whatsapp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/helpbtnno" />

    </RelativeLayout>

</RelativeLayout>