<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Petugas.Tiket.TiketPetugasItem">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header Tiket -->
            <RelativeLayout
                android:id="@+id/header_section"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#ffffff"
                android:padding="20sp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:src="@drawable/ic_back_btn_petugas" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Tiket"
                    android:textColor="#2954A8"
                    android:textSize="20sp" />
            </RelativeLayout>
            <ScrollView
                android:id="@+id/sv_tiketPetugas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header_section"
                android:layout_above="@+id/bottom_container"
                android:fillViewport="true"
                android:scrollbars="none">

            <!-- Main Section Tiket -->
            <RelativeLayout
                android:id="@+id/main_section"
                android:layout_below="@+id/header_section"
                android:layout_width="match_parent"
                android:clipChildren="false"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:paddingBottom="20sp"
                android:background="@drawable/border_blue_prakom">

                <!-- Header Ticket -->
                <LinearLayout
                    android:id="@+id/header_tiket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_blue"
                    android:backgroundTint="#073D5F"
                    android:orientation="vertical"
                    android:paddingHorizontal="25sp"
                    android:paddingVertical="15sp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="5sp"
                        android:src="@drawable/tiket_petugas" />

                    <TextView
                        android:id="@+id/tv_judul_tiket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Proyektor Presentasi Mati Konslet"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_kode_tiket_petugas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="63a062e6c9444"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_tanggal_tiket_petugas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:layout_marginBottom="10sp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="TanggalTiket"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <RatingBar
                        android:id="@+id/rating_bar_petugas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-15dp"
                        android:layout_marginBottom="-15dp"
                        android:isIndicator="true"
                        android:rating="0"
                        android:scaleX=".5"
                        android:scaleY=".5"
                        android:max="5"
                        android:progressTint="#FFB800"
                        android:progressBackgroundTint="@null"
                        android:layout_gravity="center"
                        />



                </LinearLayout>

                <!-- Body Ticket -->
                <LinearLayout
                    android:id="@+id/body_tiket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header_tiket"
                    android:layout_marginTop="10sp"
                    android:orientation="vertical">

                    <!-- Tanggal Permintaan -->

                    <!-- Border -->

                    <!-- Data Pelapor -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:background="@drawable/border_gray2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <!-- Nama Pelapor -->
                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="10sp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/tv_nama_pelapor_label"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="Nama "
                                    android:textColor="#000000"
                                    android:textSize="10sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:text=":"
                                        android:textColor="#000000"
                                        android:textSize="11sp" />

                                    <TextView
                                        android:id="@+id/tv_nama_pelapor_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginLeft="15sp"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:text="test"
                                        android:textColor="#000000"
                                        android:textSize="10sp" />

                                </LinearLayout>

                            </TableRow>

                            <!-- Unit Kerja Pelapor -->
                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="10sp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/tv_unit_kerja_label"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="Unit Kerja"
                                    android:textColor="#000000"
                                    android:textSize="10sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:text=":"
                                        android:textColor="#000000"
                                        android:textSize="11sp" />

                                    <TextView
                                        android:id="@+id/tv_unit_kerja_pelapor"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginLeft="15sp"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:text="test"
                                        android:textColor="#000000"
                                        android:textSize="10sp" />

                                </LinearLayout>

                            </TableRow>

                            <!-- Bagian Pelapor -->
                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="10sp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/tv_bagian_label"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="Jabatan"
                                    android:textColor="#000000"
                                    android:textSize="10sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:text=":"
                                        android:textColor="#000000"
                                        android:textSize="11sp" />

                                    <TextView
                                        android:id="@+id/tv_jabatan_pelapor_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginLeft="15sp"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:text="test"
                                        android:textColor="#000000"
                                        android:textSize="10sp" />

                                </LinearLayout>

                            </TableRow>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="10sp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/tv_hp_label"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="Nomor HP"
                                    android:textColor="#000000"
                                    android:textSize="10sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:text=":"
                                        android:textColor="#000000"
                                        android:textSize="11sp" />

                                    <TextView
                                        android:id="@+id/tv_hp_pelapor_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginLeft="15sp"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:text="test"
                                        android:textColor="#000000"
                                        android:textSize="10sp" />

                                </LinearLayout>

                            </TableRow>


                            <TableRow
                                android:id="@+id/trEmail"
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="10sp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/tv_email_label"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="Email"
                                    android:textColor="#000000"
                                    android:textSize="10sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:text=":"
                                        android:textColor="#000000"
                                        android:textSize="11sp" />

                                    <TextView
                                        android:id="@+id/tv_email_pelapor_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginLeft="15sp"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:text="test"
                                        android:textColor="#000000"
                                        android:textSize="10sp" />

                                </LinearLayout>

                            </TableRow>


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/btn_wa"
                            android:layout_width="115dp"
                            android:layout_height="35dp"
                            android:layout_marginBottom="5dp"
                            android:background="@null"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:onClick="whatsappPetugas"
                            app:srcCompat="@drawable/btn_hubungi_1" />

                        <TextView
                            android:id="@+id/tv_rating_keterangan"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:text="Review"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/black"
                            android:layout_alignParentBottom="true"
                            />
                    </RelativeLayout>

                    <!-- Border -->

                    <!-- Data Lokasi -->

                    <!-- Border -->

                    <!-- Data Tempat -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:background="@drawable/rectangle_round"
                        android:clipChildren="false"
                        android:paddingVertical="10sp"
                        android:layout_marginHorizontal="25dp"
                        android:elevation="4dp"
                        android:layout_marginTop="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_centerHorizontal="true"
                            android:elevation="4dp"
                            android:paddingHorizontal="15dp">
                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/icon_location_2" />

                            <TextView
                                android:id="@+id/tv_lokasi2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semibold"
                                android:maxLines="1"
                                android:maxLength="50"
                                android:text="Lokasi"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </RelativeLayout>
                    <!-- Data Detail -->
                    <LinearLayout
                        android:id="@+id/keterangan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <!-- Keterangan Pelapor -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="10sp"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Keterangan"
                                android:textColor="#000000"
                                android:textSize="10sp" />

                                <TextView
                                    android:layout_marginTop="10sp"
                                    android:background="@drawable/edit_text_unfill_border_gray"
                                    android:id="@+id/tv_keterangan_petugas"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="test"
                                    android:padding="15sp"
                                    android:textColor="#000000"
                                    android:textSize="12sp" />

                        </LinearLayout>

                        <!-- Permasalahan Akhir Pelapor -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="10sp"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Permasalahan Akhir"
                                android:textColor="#000000"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_marginTop="10sp"
                                android:background="@drawable/edit_text_unfill_border_gray"
                                android:id="@+id/tv_permasalahan_akhir_petugas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="test"
                                android:padding="15sp"
                                android:textColor="#000000"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!-- Solusi Pelapor -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="10sp"
                            android:layout_marginHorizontal="10dp"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Solusi"
                                android:textColor="#000000"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_marginTop="10sp"
                                android:background="@drawable/edit_text_unfill_border_gray"
                                android:id="@+id/tv_solusi_petugas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="test"
                                android:padding="15sp"
                                android:textColor="#000000"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Data Dokumen Lampiran -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:orientation="vertical">

                        <!-- Dokumen Lampiran -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="10sp"
                            android:layout_marginHorizontal="10dp"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Dokumen Lampiran"
                                android:textColor="#000000"
                                android:textSize="10sp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvDokumenPetugas"
                                android:paddingHorizontal="15sp"
                                android:background="@drawable/edit_text_unfill_border_gray"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15sp"
                                android:paddingTop="15sp"
                                android:paddingBottom="24sp"/>

                        </LinearLayout>
                        <!-- Data laporan -->
                        <LinearLayout
                            android:id="@+id/ll_laporan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="10sp"
                            android:layout_marginHorizontal="10dp"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Laporan Petugas"
                                android:textColor="#000000"
                                android:textSize="10sp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvLaporanPetugas"
                                android:paddingHorizontal="15sp"
                                android:background="@drawable/edit_text_unfill_border_gray"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15sp"
                                android:paddingTop="15sp"
                                android:paddingBottom="24sp"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
            </ScrollView>

            <RelativeLayout
                android:id="@+id/bottom_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="10sp"
                android:background="@drawable/border_blue_prakom"
                tools:ignore="NotSibling">

                <LinearLayout
                    android:id="@+id/button_section"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5sp"
                    android:padding="5sp"
                    android:gravity="center"
                    tools:ignore="NotSibling">

                    <Button

                        android:id="@+id/btn_kendala"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="50dp"
                        android:layout_marginBottom="18dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Kendala"
                        android:backgroundTint="#E21C1C"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:visibility="visible"
                        app:cornerRadius="15dp" />

                    <Button
                        android:id="@+id/btn_kerjakan"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="16dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginEnd="50dp"
                        android:layout_marginBottom="18dp"
                        android:layout_toEndOf="@+id/btn_lanjutan"
                        android:backgroundTint="#2954A8"
                        android:text="Kerjakan"
                        android:textAllCaps="false"
                        android:visibility="visible"
                        app:cornerRadius="15dp" />


                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

</RelativeLayout>