<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ticket1"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginBottom="15sp"
        android:background="@drawable/border_blue"
        android:paddingHorizontal="20sp"
        android:paddingVertical="20sp">

        <LinearLayout
            android:id="@+id/ticket_name21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Redesign tampilan dpr.go.id"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/category21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="Kode tiket"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/status3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="22 September 2022 | 20.58"
                android:textColor="#000"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ticket_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

        <ImageView
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_marginLeft="35sp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_success" />

        <RelativeLayout
            android:id="@+id/btn_nilai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_nilai"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingHorizontal="18dp"
            android:paddingVertical="5sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2sp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Beri Nilai"
                android:textColor="#FFF"
                android:textSize="11dp" />

        </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>